<Window x:Class="U5AddCoins.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U5AddCoins"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txttoonies" Text="Enter number of Toonies" Margin="0,0,0,295"/>
        <TextBox x:Name="txtloonies" Text="Enter number of Loonies" Margin="0,25,0,270"/>
        <TextBox x:Name="txtquarters" Text="Enter number of Quarters" Margin="0,50,0,245"/>
        <TextBox x:Name="txtdimes" Text="Enter number of Dimes" Margin="0,75,0,220"/>
        <TextBox x:Name="txtnickels" Text="Enter number of Nickels" Margin="0,100,0,195"/>
        <Button x:Name="btncalculate" Click="btncalculate_Click" Content="Calculate Amount" Margin="0,125,0,170" Background="#FF29E40C" Foreground="Black"/>
        <Label x:Name="lbloutput" Content=" " Margin="0,154,0,95"/>

    </Grid>
</Window>
